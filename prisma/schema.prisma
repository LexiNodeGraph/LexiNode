// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id        String @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  nickname  String @unique
  email     String
  isAuthor  Boolean?
}

model Author {
  id        String @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  nickname  String @unique
  email     String
  picture   String
  isAuthor  Boolean?
}

model Dataset {
  id        String @id @default(auto()) @map("_id") @db.ObjectId
  nodes      Json
  edges      Json
  clusters   Json
  tags       Json
}

