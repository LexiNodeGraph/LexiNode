// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id              String @id @default(auto()) @map("_id") @db.ObjectId
  name            String
  picture         String?
  nickname        String @unique
  email           String
  institution     String?
  author_role     String?
  city            String?
  country         String?
  field           String?
  isAuthor        Boolean?
}

model Paper {
  id            String @id @default(auto()) @map("_id") @db.ObjectId
  title         String
  journal_title String?
  field         String?
  year          Int
  international Int
  web_link      String?
  keywords      String[]
  abstract      String
  authors       Json[]

}

model Dataset {
  id        String @id @default(auto()) @map("_id") @db.ObjectId
  nodes      Json 
  edges      Json
  clusters   Json
  tags       Json
}